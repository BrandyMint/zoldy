# Copyright (c) 2018 Danil Pismenny <danil@brandymint.ru>
# frozen_string_literal: true

require File.expand_path('../config/environment', __dir__)

at_exit do
  Bugsnag.notify($ERROR_INFO) if $ERROR_INFO
end

puts Commands.head

if ARGV.empty?
  Pry.start
else
  Commands.run ARGV
end
